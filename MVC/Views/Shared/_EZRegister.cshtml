@using EZcore.Models
@using EZcore.Extensions

@model UserModel

@* Generated from EZcore Template. *@
@* Model namespace using directive should be added to _ViewImports.cshtml. *@

@{
    // ViewData:
    var lang = (Lang)(ViewData["Lang"] ?? 0);
    var modelName = ViewData["ViewModelName"];
    var containerDivClass = "container-fluid"; // "container" can be used for not full width
    var register = lang == Lang.EN ? "Register" : "Kayıt";
    var clear = lang == Lang.EN ? "Clear" : "Temizle";
}
@{
    ViewData["Title"] = $"{modelName} {register}";
}
<div class="@containerDivClass">
    <partial name="_EZMessage" />
    <form asp-action="Register" asp-controller="Users" autocomplete="off">
		@Html.AntiForgeryToken()
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="row mb-3">
            <label asp-for="UserName" class="col-2 col-form-label fw-bold"></label>
			<div class="col-10">
			    <input asp-for="Record.UserName" class="form-control" />
				<span asp-validation-for="Record.UserName" class="text-danger"></span>
			</div>
        </div>
        <div class="row mb-3">
            <label asp-for="Password" class="col-2 col-form-label fw-bold"></label>
			<div class="col-10">
			    <input asp-for="Record.Password" class="form-control" type="password" />
				<span asp-validation-for="Record.Password" class="text-danger"></span>
			</div>
        </div>
        <div class="row mb-3">
            <label asp-for="ConfirmPassword" class="col-2 col-form-label fw-bold"></label>
            <div class="col-10">
                <input asp-for="ConfirmPassword" class="form-control" type="password" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
        </div>
        <div class="row mb-3">
            <label asp-for="EMail" class="col-2 col-form-label fw-bold"></label>
			<div class="col-10">
			    <input asp-for="Record.EMail" class="form-control" />
				<span asp-validation-for="Record.EMail" class="text-danger"></span>
			</div>
        </div>
        <hr />  
        <div class="row mb-3">
			<div class="offset-2 col-10">
                <button type="submit" class="btn btn-primary">@register</button>
				&nbsp;&nbsp;
                <button type="reset" class="btn btn-outline-primary">@clear</button>
			</div>
        </div>
    </form>
</div>  
